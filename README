1. Clone
     cd;git clone git@github.com:djburdick/dotfiles.git

2. Symlink
     ln -s ~/dotfiles/git/config ~/.gitconfig
     ln -s ~/dotfiles/ruby/irbrc ~/.irbrc
     ln -s ~/dotfiles/vim/vimrc ~/.vimrc
     ln -s ~/dotfiles/ruby/gemrc ~/.gemrc

3. vim .bash_profile
if [ -f ~/.bashrc ];
then
        source ~/.bashrc
fi

4. Bashrc in correct place 
     cd ~/dotfiles;cp bashrc ~/.bashrc

